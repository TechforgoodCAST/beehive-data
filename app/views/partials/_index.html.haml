%h1= "#{obj}s"

%table.ui.celled.small.table
  %thead
    %tr
      %th Import
      %th= link_to 'Review', "/#{obj.name.downcase}s/review"
      %th Approved
  %tbody
    %tr
      - if obj.import.count > 0
        %td.warning= obj.import.count
      - else
        %td 0

      - if obj.review.count > 0
        %td.warning= obj.review.count
      - else
        %td 0

      %td= obj.approved.count
